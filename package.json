{
  "name": "omniplug",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:generate": "pnpm --filter @omniplug/db prisma generate",
    "db:migrate": "pnpm --filter @omniplug/db prisma migrate dev --name init"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  }
}
